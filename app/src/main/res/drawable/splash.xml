<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#26C000" /> <!-- Bright green -->
        </shape>
    </item>

    <!-- Curved top overlay -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20B000" />
            <corners android:radius="80dp" />
        </shape>
    </item>

</layer-list>
