<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/downloads">

    <ImageView
        android:id="@+id/leafTopLeft"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/searchContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle_bg"
        android:padding="8dp"
        android:orientation="horizontal"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/leafTopLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/searchDownloads"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search Downloads"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:textSize="14sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:contentDescription="Search"
            app:tint="@color/black"
            android:background="@android:color/transparent"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/buttonRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/searchContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnFavorites"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Favorites"
            android:textColor="#666666"
            android:background="@drawable/button_rounded_gray"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnDownloads"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Downloads"
            android:textColor="#666666"
            android:background="@drawable/button_rounded_gray"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textAllCaps="false"
            app:backgroundTint="@null"
            android:layout_marginStart="16dp"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/downloadsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintTop_toBottomOf="@id/buttonRow"/>

    <!-- Floating Action Button for Reminders -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabReminders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/clock"
        android:contentDescription="Reminders"
        app:tint="@android:color/white"
        app:backgroundTint="#7CB342"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="6dp"
        app:rippleColor="#9CCC65" />

    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@drawable/green_nav_bg"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/nav_home_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/home"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_home"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/nav_home_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_search_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_search"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/nav_search_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_upload_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/upload"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_upload"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/nav_upload_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_lib_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/library"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_library"
                android:background="@android:color/transparent"
                app:tint="@color/white"/>

            <View
                android:id="@+id/nav_lib_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_profile_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_profile"
                android:background="@android:color/transparent"/>

            <View
                android:id="@+id/nav_profile_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
