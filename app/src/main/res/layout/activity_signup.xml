<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/signup">

    <!-- ScrollView for the entire content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's Get Started!"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create an account on MNZL to get all features"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="24dp"
                android:gravity="center" />

            <!-- Profile Image -->
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/imgbackground"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    android:focusable="true"/>

            </RelativeLayout>

            <!-- First Name Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/firstNameIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/firstNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/firstNameIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="First Name"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="textPersonName" />

            </RelativeLayout>

            <!-- Last Name Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/lastNameIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/lastNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/lastNameIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Last Name"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="textPersonName" />

            </RelativeLayout>

            <!-- User Name Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/userNameIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/person"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/userNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/userNameIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="User Name"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="text" />

            </RelativeLayout>

            <!-- Email Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emaillogo"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/emailInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/emailIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Email"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="textEmailAddress" />

            </RelativeLayout>

            <!-- Password Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lock"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/passwordIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="textPassword" />

            </RelativeLayout>

            <!-- Confirm Password Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:id="@+id/confirmPasswordIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lock"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/confirmPasswordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/confirmPasswordIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Confirm Password"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="textPassword" />

            </RelativeLayout>

            <!-- Create Button -->
            <Button
                android:id="@+id/createButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbutton"
                android:text="CREATE"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp"
                app:backgroundTint="@null"/>

            <!-- Login Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/loginText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login here"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>