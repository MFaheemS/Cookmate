<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/login">


    <ImageView
        android:id="@+id/topCurvedShape2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:scaleType="fitStart"
        android:src="@drawable/rect2"
        />

    <ImageView
        android:id="@+id/topCurvedShape1"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/rect1"
        />

    <!-- ScrollView for content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center_horizontal">

            <!-- Chef hat icon -->
            <ImageView
                android:id="@+id/chefHatIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="24dp"
                android:src="@drawable/logo2" />

            <!-- Welcome Title -->
            <TextView
                android:id="@+id/welcomeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/subtitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in to existing CookMate account"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="32dp"
                android:gravity="center" />

            <!-- Username Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/usernameIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/emaillogo"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/usernameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/usernameIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Username"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="text" />

            </RelativeLayout>

            <!-- Password Input -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/emailinput"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/lock"
                    android:layout_marginRight="12dp" />

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/passwordIcon"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:textSize="16sp"
                    android:inputType="textPassword" />

            </RelativeLayout>

            <!-- Forgot Password -->
            <TextView
                android:id="@+id/forgotPasswordText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="#666666"
                android:textSize="14sp"
                android:gravity="right"
                android:layout_marginBottom="32dp"
                android:clickable="true" />

            <!-- Log In Button -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbutton"
                android:text="LOG IN"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:layout_marginBottom="24dp"
                android:elevation="4dp"

                />

            <!-- Or sign up using text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or sign up using"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Social Media Icons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Facebook Icon -->
                <ImageView
                    android:id="@+id/facebookIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/face"
                    android:layout_marginRight="16dp"
                    android:clickable="true" />

                <!-- Google Icon -->
                <ImageView
                    android:id="@+id/googleIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/google"
                    android:layout_marginRight="16dp"
                    android:clickable="true" />

                <!-- Apple Icon -->
                <ImageView
                    android:id="@+id/appleIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/apple"
                    android:clickable="true" />

            </LinearLayout>

            <!-- Sign Up Text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/signUpText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>