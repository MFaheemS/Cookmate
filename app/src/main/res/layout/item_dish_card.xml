<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="10dp"
    android:background="@android:color/white">

    <!-- Dish Image -->
    <ImageView
        android:id="@+id/dish_img"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:src="@drawable/Handi"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Heart + Download -->
    <LinearLayout
        android:id="@+id/stats_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/dish_img"
        app:layout_constraintStart_toStartOf="@id/dish_img"
        app:layout_constraintEnd_toEndOf="@id/dish_img">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/hearts"
                android:tint="@color/pink_like" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textSize="11sp"
                android:textColor="@color/textDark"
                android:layout_marginTop="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/download"
                android:tint="@color/textGray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="325"
                android:textSize="11sp"
                android:textColor="@color/textDark"
                android:layout_marginTop="1dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Green Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/dish_img"
        app:layout_constraintTop_toTopOf="@id/dish_img"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="14dp"
        app:cardBackgroundColor="@color/primaryGreen"
        app:cardCornerRadius="18dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chicken Handi"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dish_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Dinner â€¢ 40 min"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/dish_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creamy, flavorful curry cooked in a traditional handi pot."
                android:textColor="@color/white"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp"
                android:layout_marginTop="6dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Show Details button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_details"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:text="Show Details >>"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:paddingHorizontal="22dp"
        app:backgroundTint="@color/primaryGreen_light"
        app:cornerRadius="21dp"
        app:elevation="6dp"
        app:layout_constraintStart_toStartOf="@id/card"
        app:layout_constraintTop_toBottomOf="@id/card"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-30dp"
        android:translationZ="10dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
