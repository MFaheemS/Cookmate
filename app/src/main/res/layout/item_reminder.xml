<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/img_reminder_recipe"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/biryani"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:contentDescription="Recipe Image" />

        <!-- Delete Button (Floating over image) -->
        <ImageView
            android:id="@+id/btn_delete_reminder"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="@android:color/holo_red_light"
            android:padding="4dp"
            android:layout_alignTop="@id/img_reminder_recipe"
            android:layout_alignRight="@id/img_reminder_recipe"
            android:layout_margin="4dp"
            android:elevation="4dp"
            android:contentDescription="Delete reminder" />

        <!-- Info Container -->
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_reminder_recipe"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <!-- Recipe Name (Green) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reminder_name_background"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <TextView
                    android:id="@+id/tv_reminder_recipe_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chicken Biryani"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Time Row (White with border) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center_vertical"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/tv_reminder_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02:00 . PM"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Time Left Row (Green) with Edit Button -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">

                <LinearLayout
                    android:id="@+id/time_left_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/btn_edit_reminder"
                    android:background="@drawable/reminder_time_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="6dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:contentDescription="Clock"
                        android:src="@drawable/clock" />

                    <TextView
                        android:id="@+id/tv_time_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="3 hr left"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Edit Button -->
                <Button
                    android:id="@+id/btn_edit_reminder"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Edit"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/followbutton"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    android:backgroundTint="#03A9F4"
                    app:backgroundTint="@null"
                    android:minHeight="0dp"/>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#FFC107"
        android:layout_marginTop="16dp" />

</LinearLayout>

