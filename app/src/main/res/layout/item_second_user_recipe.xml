<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:background="@drawable/recipe_card_gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/recipe_card_gradient_bg">

        <!-- Recipe Image with Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo2"
                android:contentDescription="Recipe image" />
        </androidx.cardview.widget.CardView>

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Recipe Title"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Like Button -->
            <ImageView
                android:id="@+id/icon_like"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_like"
                android:background="@drawable/button_circle_white"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                app:tint="#E91E63"
                android:contentDescription="Like recipe" />

            <!-- Download Button -->
            <ImageView
                android:id="@+id/icon_download"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_download"
                android:background="@drawable/button_circle_white"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                app:tint="#000000"
                android:contentDescription="Download recipe" />

            <!-- Details Button (Hidden when downloaded) -->
            <ImageView
                android:id="@+id/btn_details"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_details"
                android:background="@drawable/button_circle_white"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="visible"
                android:contentDescription="View details" />

            <!-- Checkmark Icon (Shown when downloaded) -->
            <ImageView
                android:id="@+id/icon_check"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check"
                android:background="@drawable/button_circle_white"
                android:padding="6dp"
                android:visibility="gone"
                android:contentDescription="Downloaded" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

