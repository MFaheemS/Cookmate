<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#66BB6A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Recipe Image with Rounded Corners -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/logo2"
                android:contentDescription="Recipe image" />
        </androidx.cardview.widget.CardView>

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Recipe Title"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Details Button (Heart position) -->
            <ImageView
                android:id="@+id/btn_details"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_details"
                android:background="@drawable/button_circle_white"
                android:padding="6dp"
                android:layout_marginEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="View details" />

            <!-- Delete Button (Download position) -->
            <ImageView
                android:id="@+id/btn_delete_recipe"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_delete"
                android:background="@drawable/button_circle_red"
                android:padding="6dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Delete recipe" />

            <!-- Checkmark Icon (if needed) -->
            <ImageView
                android:id="@+id/icon_check"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_check"
                android:background="@drawable/button_circle_white"
                android:padding="6dp"
                android:layout_marginStart="12dp"
                android:visibility="gone"
                android:contentDescription="Checked" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

