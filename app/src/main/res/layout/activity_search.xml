<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Green Header Bar -->
    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundbutton"
        android:padding="12dp"
        android:layout_alignParentTop="true">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_back"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="Back" />

        <!-- Search Bar -->
        <LinearLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_back"
            android:layout_toLeftOf="@id/btn_filter"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/emailinput"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Desert"
                android:textColorHint="#999999"
                android:textColor="#333333"
                android:background="@android:color/transparent"
                />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_search"
                android:contentDescription="Search" />
        </LinearLayout>

        <!-- Filter Button -->
        <ImageView
            android:id="@+id/btn_filter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/filter1"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="Filter" />
    </RelativeLayout>

    <!-- ScrollView for Recipe List -->
    <ScrollView
        android:id="@+id/scroll_recipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_bar"
        android:layout_above="@id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <!-- Jalebi Recipe Card -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:id="@+id/img_jalebi"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/jelibi"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="Jalebi" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_jalebi"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jalebi"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Categories: Desert, Sweet, Veg, Asian, Hot"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </RelativeLayout>

            <!-- Divider Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFC107"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <!-- HINT: Place your bottom navigation here -->
    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/backgroundbutton"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        android:weightSum="5">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home" />

        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/search" />

        </LinearLayout>

        <!-- Add/Create -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/add" />

        </LinearLayout>

        <!-- Messages/Documents -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_library" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                app:tint="@color/white" />

        </LinearLayout>

    </LinearLayout>

    <!-- Floating Action Button (Green leaf icon bottom right) -->
    <ImageView
        android:id="@+id/fab_leaf"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_above="@id/bottomNavigation"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/pin"
        android:elevation="6dp"
        android:contentDescription="Leaf Action" />

</RelativeLayout>