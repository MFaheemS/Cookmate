<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF">

    <!-- Top curved green shape -->

    <ImageView
        android:id="@+id/topCurvedShape2"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:scaleType="fitStart"
        android:src="@drawable/rect2"
        />

    <ImageView
        android:id="@+id/topCurvedShape1"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitStart"
        android:src="@drawable/rect1"
        />


    <!-- Bottom curved green shape -->
    <ImageView
        android:id="@+id/bottomCurvedShape"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/design1" />

    <!-- Content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <!-- Forget Password Title -->
        <TextView
            android:id="@+id/forgetPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp" />

        <!-- Email Input Field -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/emailinput"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:id="@+id/emailIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/emaillogo"
                android:layout_marginRight="12dp" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/emailIcon"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="textEmailAddress" />

        </RelativeLayout>

        <!-- Send Code Button -->
        <Button
            android:id="@+id/sendCodeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/backgroundbutton"
            android:text="Send Code"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:elevation="4dp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</RelativeLayout>