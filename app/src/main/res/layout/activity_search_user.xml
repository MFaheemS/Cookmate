<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Back Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            android:clickable="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Search Users"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Profile Icon -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/profile"
            android:clickable="true"
            app:tint="@color/black"/>

    </RelativeLayout>

    <!-- Search and Results Section -->
    <LinearLayout
        android:id="@+id/searchSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp">

        <!-- Search Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/emailinput"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/search"
                android:layout_marginRight="12dp" />

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/searchIcon"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:hint="Search username"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:inputType="text" />

        </RelativeLayout>

        <!-- Results and Refresh -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <TextView
                android:id="@+id/resultsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 results"
                android:textColor="#000000"
                android:textSize="14sp"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_refresh"
                    android:layout_marginRight="4dp" />

                <TextView
                    android:id="@+id/refreshText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refresh"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:clickable="true" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <!-- Users List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/searchSection"
        android:layout_above="@id/bottomNavigation"
        android:padding="16dp"
        android:clipToPadding="false" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/backgroundbutton"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        android:weightSum="5">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/homeNav"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home" />

        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/searchNav"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/search"
                app:tint="@color/black" />

        </LinearLayout>

        <!-- Add/Create -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/uploadNav"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/add" />

        </LinearLayout>

        <!-- Messages/Documents -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/libNav"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_library"
                app:tint="@color/bg_light"/>

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:id="@+id/profileNav"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                app:tint="@color/bg_light"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

