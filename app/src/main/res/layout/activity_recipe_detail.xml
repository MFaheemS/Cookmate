<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:id="@+id/recipe_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Image Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <ImageView
                    android:id="@+id/recipe_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/biryani"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#60000000" />

                <ImageView
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_back"
                    android:layout_margin="16dp"
                    android:padding="8dp" />

                <!-- Title and Stats -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/recipe_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <!-- Static Stats for now -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical">
                        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/hearts" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="1000" android:textColor="#FFFFFF" android:textSize="14sp" android:layout_marginLeft="4dp" android:layout_marginRight="16dp" />
                        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_download" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="325" android:textColor="#FFFFFF" android:textSize="14sp" android:layout_marginLeft="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- User Profile Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:background="#FFFFFF">

                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/default_pfp"

                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loading..."
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@id/user_avatar"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true" />

                <Button
                    android:id="@+id/btn_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Follow"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/followbutton"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:textAllCaps="false" />
            </RelativeLayout>

            <!-- Description (Added this so we can see it) -->
            <TextView
                android:id="@+id/recipe_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description..."
                android:padding="16dp"
                android:textColor="#555555"
                android:textSize="14sp"
                android:background="#FFFFFF"/>


            <!-- Tags Section Container -->
            <LinearLayout
                android:id="@+id/tags_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">
                <!-- Tags added dynamically -->
            </LinearLayout>

            <!-- Ingredients Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Dynamic Container -->
                <LinearLayout
                    android:id="@+id/ingredients_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

            <!-- Steps Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_card_background"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:layout_marginTop="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steps"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Dynamic Container -->
                <LinearLayout
                    android:id="@+id/steps_list_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="20dp" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>