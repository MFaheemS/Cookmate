<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    android:id="@+id/homepage">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_home"
        android:padding="16dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:src="@drawable/logo2" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:text="CookMate"
            android:textColor="#7CB342"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/app_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/emailinput"
            android:hint="Search Dishes/Ingredients"
            android:paddingLeft="16dp"
            android:paddingRight="80dp"
            android:textSize="14sp"
            android:textColorHint="#999999"
            android:clickable="true"
            android:focusable="false"
            android:cursorVisible="false"/>
    </RelativeLayout>

    <!-- Falling Leaves Container (overlays header) -->
    <FrameLayout
        android:id="@+id/falling_leaves_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/header"
        android:layout_alignBottom="@id/header"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:elevation="10dp"
        android:clickable="false"
        android:focusable="false"/>

    <!-- Recommended For You Section with Border -->
    <LinearLayout
        android:id="@+id/recommended_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:orientation="vertical"
        android:background="@drawable/recommended_border"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:elevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <!-- Left leaf decoration -->
            <ImageView
                android:id="@+id/leaf_left"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_leaf"
                android:rotation="-30"
                app:tint="#7CB342" />

            <TextView
                android:id="@+id/recommended_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Recommended for You"
                android:textColor="#66BB6A"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Right leaf decoration -->
            <ImageView
                android:id="@+id/leaf_right"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_leaf"
                android:rotation="30"
                app:tint="#7CB342" />
        </RelativeLayout>

        <!-- Horizontal line below title -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#C8E6C9"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_recipes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recommended_section"
        android:layout_above="@id/bottomNavigation"
        android:paddingTop="8dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="16dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/recipes_container_border"
        android:clipToPadding="false" />

    <!-- Shake Hint Floating Action Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/shake_hint_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomNavigation"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="8dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp"
        android:backgroundTint="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:background="@drawable/shake_hint_gradient">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽ²"
                android:textSize="24sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shake for random"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/backgroundbutton"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/nav_home_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home"
                app:tint="@color/bg_light"/>
            <View
                android:id="@+id/nav_home_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="visible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_search_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/search"/>
            <View
                android:id="@+id/nav_search_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_upload_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/upload"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/add"/>
            <View
                android:id="@+id/nav_upload_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_lib_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/lib"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_library"/>
            <View
                android:id="@+id/nav_lib_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_profile_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/profile"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                app:tint="@color/white"/>
            <View
                android:id="@+id/nav_profile_indicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginTop="4dp"
                android:background="#F44336"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>