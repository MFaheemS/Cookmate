<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Top Header Bar -->
    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#8BC34A"
        android:layout_alignParentTop="true">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:padding="8dp"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Recipe"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/backgroundbutton"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:elevation="8dp"
        android:weightSum="5">

        <!-- Home -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/home" />

        </LinearLayout>

        <!-- Search -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/search" />

        </LinearLayout>

        <!-- Add/Create -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/add" />

        </LinearLayout>

        <!-- Messages/Documents -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_library"
                app:tint="@color/white" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile"
                app:tint="@color/black" />

        </LinearLayout>

    </LinearLayout>

    <!-- ScrollView for Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_bar"
        android:layout_above="@id/bottomNavigation"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Add Title Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Title"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chicken Biryani"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FFC107" />
            </LinearLayout>

            <!-- Upload Images Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Images"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Image 1 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_item_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/img_preview_1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/biryani"
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="Recipe Image 1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biryani.jpg"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/img_preview_1"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/close"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="Remove" />
                </RelativeLayout>

                <!-- Image 2 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_item_background"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:id="@+id/img_preview_2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/biryani"
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="Recipe Image 2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biryani2.jpg"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/img_preview_2"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/close"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="Remove" />
                </RelativeLayout>

                <!-- Image 3 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/image_item_background"
                    android:padding="8dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/img_preview_3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/biryani"
                        android:scaleType="centerCrop"
                        android:layout_alignParentLeft="true"
                        android:contentDescription="Recipe Image 3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biryani3.jpg"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_toRightOf="@id/img_preview_3"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/close"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        android:contentDescription="Remove" />
                </RelativeLayout>

                <!-- Add Image Button -->
                <Button
                    android:id="@+id/btn_add_image"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Add Image"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_green_rounded"
                    android:layout_gravity="right"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:textAllCaps="false"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Add Ingredients Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add Ingredients"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty"
                        android:textColor="#666666"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp" />
                </RelativeLayout>

                <!-- Ingredient Item -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <EditText
                        android:id="@+id/edit_ingredient_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@id/edit_ingredient_qty"
                        android:text="Basmati Rice"
                        android:textColor="#333333"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:paddingBottom="8dp" />

                    <EditText
                        android:id="@+id/edit_ingredient_qty"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="1 cup boiled"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:gravity="right"
                        android:background="@android:color/transparent"
                        android:paddingBottom="8dp" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginBottom="12dp" />

                <!-- Add Ingredient Button -->
                <Button
                    android:id="@+id/btn_add_ingredient"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Add Ingredient"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_green_rounded"
                    android:layout_gravity="right"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:textAllCaps="false"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Add Steps Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Steps"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Step Input -->
                <EditText
                    android:id="@+id/edit_step"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Step 1: add step description here"
                    android:textColorHint="#999999"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="12dp" />

                <!-- Next Step Button -->
                <Button
                    android:id="@+id/btn_next_step"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Next Step"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/button_green_rounded"
                    android:layout_gravity="right"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:textAllCaps="false"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Add Tags Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Tags (Categories)"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Tags Display -->
                <EditText
                    android:id="@+id/edit_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="#Lunch, #Hot, #Asian"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <Button
                android:id="@+id/upload_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Upload"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_green_rounded"
                android:layout_gravity="right"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:textAllCaps="false"
                app:backgroundTint="@null"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>